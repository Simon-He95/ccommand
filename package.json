{
  "name": "ccommand",
  "type": "module",
  "version": "1.0.88",
  "description": "ccommand",
  "author": "Simon He",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git + git@github.com:Simon-He95/ccommand.git"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/ccommand/issues"
  },
  "keywords": [
    "ccommand",
    "terminal"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ccommand": "./cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown ./src/index.ts ./src/cli.ts --minify --format cjs,esm",
    "dev": "tsdown ./src/index.ts ./src/cli.ts --watch",
    "play": "pnpm run -C playground dev",
    "play:build": "pnpm run -C playground build",
    "format": "prettier --write --cache .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --dir test -u",
    "ptest": "pnpm run -C playground test -u",
    "preview": "pnpm run -C playground preview",
    "test:e2e": "cypress open",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --tag --push && git push origin --tags -f && npm publish"
  },
  "dependencies": {
    "@simon_he/colorize": "^0.0.1",
    "fast-glob": "^3.3.3",
    "lazy-js-utils": "^0.1.49",
    "picocolors": "^1.1.1",
    "terminal-link": "^3.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/node": "^17.0.45",
    "bumpp": "^8.2.1",
    "eslint": "^9.39.2",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "tsdown": "^0.20.1",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5",
    "vitest": "^0.13.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
