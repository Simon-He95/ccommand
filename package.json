{
  "name": "ccommand",
  "version": "1.0.30",
  "packageManager": "pnpm@6.32.3",
  "description": "ccommand",
  "author": "Simon He",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git + git@github.com:Simon-He95/ccommand.git"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/ccommand/issues"
  },
  "keywords": [
    "ccommand",
    "terminal"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ccommand": "dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "simple-git-hooks",
    "build": "pkgroll --minify",
    "dev": "pkgroll --watch",
    "play": "pnpm run -C playground dev",
    "play:build": "pnpm run -C playground build",
    "format": "prettier --write --cache .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest --dir test -u",
    "ptest": "pnpm run -C playground test -u",
    "preview": "pnpm run -C playground preview",
    "test:e2e": "cypress open",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --tag --push && git push origin --tags -f && npm publish"
  },
  "dependencies": {
    "@simon_he/colorize": "^0.0.1",
    "@vueuse/core": "^8.1.1",
    "chalk": "^5.1.2",
    "fast-glob": "^3.2.12",
    "simon-js-tool": "^4.1.21",
    "terminal-link": "^3.0.0",
    "vue": "^3.2.36",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.1",
    "@types/node": "^17.0.45",
    "@vitejs/plugin-vue": "^3.0.1",
    "bumpp": "^8.2.1",
    "eslint": "^8.16.0",
    "eslint-plugin-n": "^15.2.1",
    "lint-staged": "^13.1.0",
    "picocolors": "^1.0.0",
    "pkgroll": "^1.3.1",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.1",
    "typescript": "^4.7.2",
    "vite": "^3.0.2",
    "vitest": "^0.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@antfu"
  }
}
